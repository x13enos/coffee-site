<% content_for :head do %>
    <%= javascript_include_tag 'https://maps.google.com/maps/api/js?sensor=true&language=ru' %>
    <%= javascript_include_tag 'places' %>
<% end %>

<div id="cell">
            
    <div id="content_left" style="width: 507px;">
            	
        <div id="content_left_opacity" class="width2"></div>
                
            <div style="margin-left:21px; margin-top: 23px; padding-right: 20px; position:relative;">
                
                <div style="width: 450px; height: 400px;" id="map_canvas"></div>
                     
            </div>
                
    </div>
            
    <div id="content_right" style="width: 173px;">
                
        <div>Категории</div>        
        <% @categories.each do |c| %>
            <div>
                <input type="checkbox" id=<%= c.id %> />
                <%= c.name %>
            </div>
        <% end %>
            	
    </div>
            
</div>